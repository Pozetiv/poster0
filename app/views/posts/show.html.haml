.d-flex.justify-content-center
  .post
    .post__header
      = @post.community.name + ' Published by ' + @post.user.nick + ' ' + time_ago_in_words(@post[:created_at])
    .post__body
      = image_tag @post.image.url(:thumb), class: 'img-thumbnail' if @post.image?

= link_to 'Edit', edit_post_path(@post)
= link_to 'Back', posts_path
