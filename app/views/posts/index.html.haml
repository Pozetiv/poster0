-if @posts.any?
  -@posts.each do |post|
    .post
      .post__header
        =post.community.name =post.user.nick
      .post__body
        =link_to (image_tag post.image.url(:thumb), class: 'img-thumbnail' if post.image?), post_path(post)
        <br>
        =post.body if post.body?
      .post__footer

-else
  %h2 Don't find post